{
    "name": "arc-plugin-oauth",
    "version": "0.0.12",
    "description": "Architect OAuth Plugin",
    "author": "Ryan Bethel",
    "main": "src/index.js",
    "folders": "src",
    "scripts": {
        "lint": "eslint src --ignore-pattern node_modules --fix",
        "hydrate:tests": "cd test/mocks && npm i",
        "test": "MOCK_FOLDER=basic playwright test test/browser/basic.spec.mjs --config test/playwright.config.mjs"
    },
    "devDependencies": {
        "@architect/architect": "^10.0.2",
        "@architect/eslint-config": "^2.0.1",
        "@playwright/test": "^1.20.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.4.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.5.1",
        "prettier-eslint": "^13.0.0",
        "tap-arc": "^0.1.1",
        "tape": "^5.3.2"
    },
    "dependencies": {
        "tiny-json-http": "^7.3.0",
        "@architect/functions": "^5.0.3"
    },
    "eslintConfig": {
        "extends": [
            "@architect/eslint-config",
            "plugin:prettier/recommended"
        ],
        "plugins": [
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "semi": false,
                    "singleQuote": true,
                    "tabWidth": 2,
                    "useTabs": false,
                    "trailingComma": "none",
                    "bracketSameLine": true
                }
            ]
        },
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },
        "env": {
            "es2021": true,
            "browser": true,
            "node": true
        }
    }
}
